{% extends 'base.html.twig' %}

{% block title %}Hello AdrienController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
<br><br><br>
<div class="card text-white bg-secondary mb-3 col-6 mx-auto" style="max-width: 20rem" margin="center";>
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Login</th>
                <th scope="col">Mot de passe</th>
            </tr>
        </thead>
        <tbody>
            {% for item in listelogin %}
            <tr class="table-active">
                <th scope="row">{{ item.id }}</th>
                <td>{{ item.login }}</td>
                <td>{{ item.password }}</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}