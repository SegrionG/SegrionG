{% extends 'base.html.twig' %}

{% block title %}Hello AdrienController!{% endblock %}

{% block body %}

<br><br><br>
<div class="card text-black bg-secondary mb-3 col-6 mx-auto" style="max-width: 20rem" margin="center";>
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Login</th>
                <th scope="col">Mot de passe</th>
            </tr>
        </thead>
        <tbody>
            {% for item in listelogin %}
            <tr class="table-danger">
                <th scope="row">{{ item.id }}</th>
                <td>{{ item.login }}</td>
                <td>{{ item.password }}</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}